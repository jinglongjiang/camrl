[env]
time_limit = 100
time_step = 0.25
val_size = 100
test_size = 300
randomize_attributes = true

[reward]
; 终局信号适中（不过猛），给 shaping 留出学习空间
success_reward = 10.0
collision_penalty = -3.0

; 近距不适（平方惩罚）
discomfort_dist = 0.22
discomfort_penalty_factor = 6.0

; —— 核心 shaping：恢复“进度”主导 + 适度安全 shaping ——
w_prog  = 3.5
w_goal  = 4.0
w_coll  = 4.0
w_soc   = 1.0
soc_dist= 0.5
alpha   = 10.0
v_safe  = 0.5
w_relv  = 0.6
w_time  = 0.05
w_shape = 0.0
w_align = 0.0
max_dist= 10.0

; 预判类
w_ttc = 0.6
ttc_thresh = 2.2

; 速度整形（相对 v_pref 的二次偏差）
w_speed = 0.15
speed_target = 0.7

; 早停：防原地磨
noprog_eps = 0.015
noprog_patience = 30

[sim]
train_val_sim = circle_crossing
test_sim = circle_crossing
square_width = 10
circle_radius = 4
human_num = 5

[humans]
visible = true
policy = orca
radius = 0.3
v_pref = 1
sensor = coordinates

[robot]
visible = true         ; 先保持和你之前一致，等稳定后再切 false 做更难设置
policy = none
radius = 0.3
v_pref = 1
sensor = coordinates

[orca]
neighbor_dist = 2.0
max_neighbors = 5
time_horizon = 3.0
time_horizon_obst = 2.0
radius = 0.3
max_speed = 1.0
safety_space = 0.05
label_inflate = 0.05
slow_k = 1.5
eps_noise = 0.0

