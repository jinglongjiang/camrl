[env]
time_limit = 100
time_step = 0.25
val_size = 100
test_size = 300
randomize_attributes = true

[reward]
; 终局信号适中（不过猛），给 shaping 留出学习空间
success_reward = 10.0
collision_penalty = -3.0

; 近距不适（平方惩罚）
discomfort_dist = 0.22
discomfort_penalty_factor = 6.0

; —— 核心 shaping：恢复“进度”主导 + 适度安全 shaping ——
w_prog  = 3.5
w_goal  = 4.0
w_coll  = 4.0
w_soc   = 1.0
soc_dist= 0.5
alpha   = 10.0
v_safe  = 0.5
w_relv  = 0.6
w_time  = 0.05
w_shape = 0.0
w_align = 0.0
max_dist= 10.0

; 预判类
w_ttc = 0.6
ttc_thresh = 2.2

; 速度整形（相对 v_pref 的二次偏差）
w_speed = 0.15
speed_target = 0.7

; 早停：防原地磨
noprog_eps = 0.015
noprog_patience = 30

[sim]
train_val_sim = circle_crossing
test_sim = circle_crossing
square_width = 10
circle_radius = 4
human_num = 5

[humans]
visible = true
policy = orca
radius = 0.3
v_pref = 1
sensor = coordinates

[robot]
visible = false
policy = none
radius = 0.3
v_pref = 1
sensor = coordinates

[orca]
; —— 更保守、更稳定的 ORCA 专家设定（不可见机器人场景友好）
neighbor_dist = 3.0
max_neighbors = 8
time_horizon = 4.0
time_horizon_obst = 3.0
radius = 0.3
max_speed = 1.2
safety_space = 0.05
label_inflate = 0.10      ; 标注期给机器人更大的安全边
slow_k = 2.0              ; 到终点前更早减速
eps_noise = 0.03          ; 轻微破对称避免迎面僵持

; —— 新增：TTC 前馈制动（与 orca.py 改动匹配）
ttc_brake = 2.0           ; TTC < 2s 开始按比例减速
brake_min_ratio = 0.3     ; 最低保留 30% 速度

; —— 行人首选速度模式（consistent with CrowdNav）
human_pref_mode = goal

