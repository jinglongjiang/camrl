[mamba]
# —— 结构容量（与 env 的 obs 维度严格对应）——
use_amp = true
try_compile = true

obs_dim        = 34
state_dim      = 34
robot_feat_dim = 9
human_feat_dim = 5
human_num      = 5

hidden_dim     = 48
n_blocks       = 2
conv_dim       = 4
expand         = 2
dropout        = 0.15
topk           = 3

gamma          = 0.95
action_scale   = 0.65
multiagent_training = true
env_stochastic = true

; 兼容字段（不会被新训练器直接用，但保留不冲突）
learning_rate  = 0.0003

[action_space]
kinematics = holonomic

; Expert（用于 IL 的 ORCA 策略也从此 policy.config 读取）
[orca]
neighbor_dist = 3.0
max_neighbors = 8
time_horizon = 4.0
time_horizon_obst = 3.0
radius = 0.3
max_speed = 1.2
safety_space = 0.05
ttc_brake = 2.0
brake_min_ratio = 0.3
label_inflate = 0.10
slow_k = 2.0
eps_noise = 0.03
