[trainer]
batch_size    = 1536
gamma         = 0.95
tau           = 0.005
lr_actor      = 0.0002
lr_critic     = 0.00025
lr_alpha      = 0.00015
target_entropy= -2.4
use_amp       = true
grad_clip     = 0.5
awbc_beta     = 8.0

[imitation_learning]
il_episodes       = 150
il_policy         = orca
il_epochs         = 3000
il_learning_rate  = 0.0002
safety_space      = 0.15

[train]
train_batches     = 120
train_episodes    = 1500
sample_episodes   = 12
target_update_interval = 50
evaluation_interval = 150
checkpoint_interval = 500
capacity          = 200000
epsilon_start     = 0.08
epsilon_end       = 0.03
epsilon_decay     = 1500

; 轻量评估
val_subset        = 50
eval_full_every   = 300
train_stat_stride = 5

[vectorize]
enable            = true
num_workers       = 4
episodes_per_worker = 3
broadcast_interval  = 3
worker_device     = cuda:0

[dagger]
exp_full = 0
exp_anneal = 1
min_prob = 0.0
