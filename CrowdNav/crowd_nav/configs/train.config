[trainer]
batch_size = 1024
gamma = 0.95
tau = 0.005
lr_actor  = 0.0003
lr_critic = 0.0003
lr_alpha  = 0.0003

; 这三个是你刚提到的
target_entropy = -3.0   ; 动作维=2，常用 -2.0~-3.0（更负 → 探索更强）
use_amp = true          ; 开启混合精度
grad_clip = 1.0         ; 全局范数裁剪

; 兼容字段（现在不直接用）
bc_ratio  = 1.2
lambda_bc = 1.0

[imitation_learning]
il_episodes = 300
il_policy = orca
il_epochs = 2000
il_learning_rate = 0.0003
safety_space = 0.12

[train]
train_batches = 120
train_episodes = 1500
sample_episodes = 24
target_update_interval = 50
evaluation_interval = 150
capacity = 100000
epsilon_start = 0.08
epsilon_end = 0.03
epsilon_decay = 1500
checkpoint_interval = 500

[dagger]
exp_full = 0
exp_anneal = 1
min_prob = 0.0
